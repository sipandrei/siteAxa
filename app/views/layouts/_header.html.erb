<div class="flex-col-centered">
  <%= link_to image_tag("logo.png", border: 0, alt: 'Revista Axa', width: '120vmax'), root_path, id: 'logo'  %>

  <nav class = "categories">
      <% Category.all.order(:name).each do |category| %>
        <%= link_to category.name, category_path(category.id) %>
      <% end %>
  </nav>

  <svg class="burger-button" viewBox="0 0 100 80" width="30" height="30">
    <rect width="100" height="20" rx="8"></rect>
    <rect y="30" width="100" height="20" rx="8"></rect>
    <rect y="60" width="100" height="20" rx="8"></rect>
  </svg>

  <%= render "layouts/burger" %>
</div>
